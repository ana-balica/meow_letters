<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="menu_button">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/menu_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/menu_button_text_padding_left</item>
        <item name="android:layout_marginBottom">@dimen/menu_button_margin_bottom</item>
        <item name="android:drawablePadding">@dimen/menu_button_drawable_padding</item>
    </style>

    <style name="customtablerow_5_columns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="columnsCount">5</item>
    </style>

    <style name="letter_button">
        <item name="android:background">@drawable/letter_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/letter_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">selectLetter</item>
    </style>

    <style name="activity_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/title_margin</item>
    </style>

    <style name="highscores_top_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/emerald</item>
        <item name="android:textSize">@dimen/highscores_top_row_text_size</item>
        <item name="android:layout_marginBottom">@dimen/highscores_top_row_margin_bottom</item>
    </style>

    <style name="highscores_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingLeft">@dimen/settings_margin_left_right</item>
        <item name="android:paddingRight">@dimen/settings_margin_left_right</item>
        <item name="android:textSize">@dimen/highscores_row_text_size</item>
    </style>

    <style name="credits_entry">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorLink">@color/emerald</item>
        <item name="android:textSize">@dimen/credits_text_size</item>
        <item name="android:layout_marginBottom">@dimen/credits_entry_margin_top_bottom</item>
        <item name="android:layout_marginTop">@dimen/credits_entry_margin_top_bottom</item>
    </style>
</resources>
