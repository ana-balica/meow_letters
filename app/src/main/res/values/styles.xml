<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="menu_button">
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/menu_button_text</item>
        <item name="android:paddingTop">@dimen/menu_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/menu_button_padding_bottom</item>
    </style>

    <style name="customtablerow_5_columns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="columnsCount">5</item>
    </style>

    <style name="letter_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:onClick">selectLetter</item>
    </style>

    <style name="invisible_letter_button" parent="@style/letter_button">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="selected_letter_button" parent="@style/letter_button">
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
    </style>

    <style name="highscores_player">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="highscores_points">
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
